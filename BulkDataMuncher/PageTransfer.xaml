<Page x:Class="BulkDataMuncher.PageTransfer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BulkDataMuncher"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageTransfer">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Bestand"/>
        <Label Grid.Column="1" Grid.Row="0" Content="&lt;FILENAME&gt;" Name="lblSource"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Bestemming" Name="lblDest"/>
        <Label Grid.Column="1" Grid.Row="1" Content="&lt;BESTEMMING&gt;"/>
        <ProgressBar Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Height="100" Name="pbProgress"/>
        <Button Grid.Column="0" Grid.Row="3" Content="Annuleer" VerticalAlignment="Bottom" Name="bntCancel" Click="bntCancel_OnClick"/>
    </Grid>
</Page>
